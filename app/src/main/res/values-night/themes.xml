<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_color</item>
        <item name="colorPrimaryVariant">@color/bg_color</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/design_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/design_default_color_on_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.HelloAndroid.NoActionBar.SecondActivity">
        <item name="colorPrimaryVariant">@color/appbar_color</item>
    </style>

    <style name="Theme.HelloAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HelloAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.HelloAndroid.AppBarOverlay.Variant">
        <item name="colorPrimary">@color/appbar_color</item>
        <item name="colorPrimaryVariant">@color/appbar_color</item>
    </style>

    <style name="Theme.HelloAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.HelloAndroid.PopupOverlay.Variant">
        <item name="colorPrimary">@color/appbar_color</item>
        <item name="colorPrimaryVariant">@color/appbar_color</item>
    </style>
</resources>