<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/text_color"
                    android:background="@color/bg_color"
                    android:gravity="center"
                    android:text="@string/refresh"
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/ImageViewStyle"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view" />

                <TextView
                    android:id="@+id/countryText1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="top"
                    android:maxWidth="165dp"
                    android:maxLength="23"
                    android:maxLines="2"
                    android:text="@string/country"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    app:drawableEndCompat="@drawable/ic_chevron_right_48px"
                    app:layout_constraintStart_toEndOf="@id/imageView1"
                    app:layout_constraintTop_toBottomOf="@id/view"/>

                <TextView
                    android:id="@+id/amountText1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|end"
                    android:maxWidth="120dp"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:minWidth="120dp"
                    android:text="@string/amount"
                    android:textColor="@color/text_color"
                    android:textSize="30sp"
                    app:layout_constraintLeft_toRightOf="@id/countryText1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view" />

                <ImageView
                    android:id="@+id/imageView2"
                    style="@style/ImageViewStyle"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView1" />

                <TextView
                    android:id="@+id/countryText2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="top"

                    android:maxWidth="165dp"
                    android:maxLength="23"
                    android:maxLines="2"

                    android:text="@string/country"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    app:drawableEndCompat="@drawable/ic_chevron_right_48px"
                    app:layout_constraintStart_toEndOf="@id/imageView2"
                    app:layout_constraintTop_toBottomOf="@id/countryText1" />

                <TextView
                    android:id="@+id/amountText2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|end"
                    android:maxWidth="120dp"
                    android:maxLength="13"
                    android:maxLines="1"

                    android:minWidth="120dp"

                    android:text="@string/amount"
                    android:textColor="@color/text_color"
                    android:textSize="30sp"
                    app:layout_constraintLeft_toRightOf="@id/countryText2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amountText1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/countryText2"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/data_provider"
        android:textColor="@color/description_text_color"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <include
            layout="@layout/content_main" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>